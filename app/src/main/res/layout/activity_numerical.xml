<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.nirma.math4.Numerical">
    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/title_numerical"
        android:fontFamily="@font/roboto_mono_light"
        android:text="Numerical"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="24sp" />
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:layout_marginTop="50dp"
       android:orientation="vertical">
       <TextView
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Select Method"
           android:background="@drawable/button_numerical"
           android:gravity="center"
           android:textSize="30sp"
           android:fontFamily="casual"/>
       <Button
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="Bisection Method"
           android:background="@drawable/button_numerical"
           android:focusable="true"
           android:clickable="true"
           android:elevation="6dp"
           android:id="@+id/bisection"
           android:layout_marginTop="40dp"
           android:textSize="20sp"
           android:fontFamily="@font/roboto"/>
       <Button
           android:textSize="20sp"
           android:background="@drawable/button_numerical"
           android:focusable="true"
           android:clickable="true"
           android:elevation="6dp"
           android:fontFamily="@font/roboto_slab"
           android:id="@+id/secant"
           android:text="Secant Method"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <Button

           android:background="@drawable/button_numerical"
           android:focusable="true"
           android:clickable="true"
           android:elevation="6dp"
           android:textSize="20sp"
           android:fontFamily="@font/roboto_slab"
           android:id="@+id/fposi"
           android:text="False Position Method"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <Button

           android:textSize="20sp"
           android:background="@drawable/button_numerical"
           android:focusable="true"
           android:clickable="true"
           android:elevation="6dp"
           android:fontFamily="@font/roboto_slab"
           android:id="@+id/gausselimination"
           android:text="Gauss Elimination"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <Button

           android:textSize="20sp"
           android:background="@drawable/button_numerical"
           android:focusable="true"
           android:clickable="true"
           android:elevation="6dp"
           android:fontFamily="@font/roboto_slab"
           android:id="@+id/gaussjacobi"
           android:text="Gauss Jacobi"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />
       <Button

           android:textSize="20sp"
           android:background="@drawable/button_numerical"
           android:focusable="true"
           android:clickable="true"
           android:elevation="6dp"
           android:fontFamily="@font/roboto_slab"
           android:id="@+id/gaussseidel"
           android:text="Gauss Seidel"
           android:layout_width="match_parent"
           android:layout_height="wrap_content" />

   </LinearLayout>
</RelativeLayout>
